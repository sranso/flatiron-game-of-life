<head>
  <meta http-equiv="refresh" content="0.1">
</head>
<h1>the game of life</h1>
<div class="left">
  <div class="button" id="stop">
    <a href="/">stop</a>
  </div>
</div>
<div id="board">
  <% @local_game.world.board.each do |array| %>
    <% array.each do |cell| %>
      <div class="cell" style="background-color: <%= cell.state %>">
      </div>
    <% end %>
  <% end %>
</div>